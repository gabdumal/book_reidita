{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  },
  "include": [
    ".prettierrc.mjs",
    "astro.config.mjs",
    "eslint.config.js",
    "tailwind.config.mjs",
    "src/**/*"
  ]
}
